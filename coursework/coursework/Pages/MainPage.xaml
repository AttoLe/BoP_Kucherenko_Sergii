<Page x:Class="coursework.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:coursework"
      mc:Ignorable="d">
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="1*"/>
                  <ColumnDefinition Width="12*"/>
                  <ColumnDefinition Width="6*"/>
                  <ColumnDefinition Width="12*"/>
                  <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                  <RowDefinition Height="2*"/>
                  <RowDefinition Height="5*"/>
                  <RowDefinition Height="5*"/>
                  <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan = "3" Content="MainWindow"/>
            
            <Button Name = "ToChangeData" Grid.Row="2" Grid.Column="1" Content="ToChangeData"/>
           
            <Button Name = "ToPickTeams" Grid.Row="2" Grid.Column="3" Content="ToPickTeams"/>
      </Grid>
</Page>
